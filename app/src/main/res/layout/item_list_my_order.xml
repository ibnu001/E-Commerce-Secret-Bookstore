<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clipToPadding="false"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/iv_ilmo_cover"
            android:layout_width="100dp"
            android:layout_height="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cover" />

        <TextView
            android:id="@+id/tv_ilmo_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="[ title ]"
            android:fontFamily="@font/roboto_bold"
            android:textAlignment="center"
            android:textColor="@color/spaceCadet"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_ilmo_cover" />

        <TextView
            android:id="@+id/tv_ilmo_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto_medium"
            android:contentDescription="[ price ]"
            android:textAlignment="center"
            android:textColor="@color/spaceCadet"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tv_ilmo_title"
            app:layout_constraintStart_toStartOf="@id/tv_ilmo_title"
            app:layout_constraintTop_toBottomOf="@id/tv_ilmo_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>